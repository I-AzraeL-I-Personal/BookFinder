<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.searchservice.controller.LoginController">
   <center>
      <VBox alignment="CENTER" prefWidth="350.0">
         <children>
            <Label alignment="CENTER" prefHeight="75.0" prefWidth="340.0" text="Book Finder" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI" size="40.0" />
               </font>
            </Label>
            <Label text="Username">
               <font>
                  <Font name="Segoe UI" size="12.0" />
               </font></Label>
            <TextField fx:id="username" alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password" />
            <TextField fx:id="password" alignment="CENTER" />
            <Label fx:id="loginMessage">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <VBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="login" mnemonicParsing="false" prefWidth="150.0" text="Login" VBox.vgrow="ALWAYS" />
                  <Button fx:id="register" mnemonicParsing="false" prefWidth="150.0" text="Register" />
                  <Button fx:id="remind" mnemonicParsing="false" prefWidth="150.0" text="Remind password" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </center>
   <padding>
      <Insets left="25.0" right="25.0" />
   </padding>
</BorderPane>
